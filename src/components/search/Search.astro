---
import DocSearch from './Search'
import '@docsearch/css/dist/style.css';
---

<div class="flex items-center gap-4">
    <div class="sm:flex sm:gap-4">
        <button
            aria-label="search button"
            class="block rounded bg-gray-800 p-2 text-white transition hover:text-gray-200/75"
            id="docsearch-search-button"
        >
            <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                class="h-4 w-4"
                fill="white"
                ><g data-name="Layer 2"
                    ><g data-name="search"
                        ><rect width="24" height="24" opacity="0"></rect><path
                            d="M20.71 19.29l-3.4-3.39A7.92 7.92 0 0 0 19 11a8 8 0 1 0-8 8 7.92 7.92 0 0 0 4.9-1.69l3.39 3.4a1 1 0 0 0 1.42 0 1 1 0 0 0 0-1.42zM5 11a6 6 0 1 1 6 6 6 6 0 0 1-6-6z"
                        ></path>
                    </g>
                </g>
            </svg>
        </button>
        <DocSearch client:only="preact" />
    </div>
</div>
