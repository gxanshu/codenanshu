---
export interface Props {
  title: string;
  description: string;
  date?: any;
  image?: string;
  url: string;
}

const { title, description, image, date, url } = Astro.props;

let schema = JSON.stringify({
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  mainEntityOfPage: {
    "@type": "WebPage",
    "@id": url,
  },
  headline: title,
  description: description,
  image: image,
  author: {
    "@type": "Person",
    name: "GX Anshu",
    url: "https://gxanshu.in/about/",
  },
  publisher: {
    "@type": "Organization",
    name: "gxanshu",
    logo: {
      "@type": "ImageObject",
      url: "http://gxanshu.in/logo.png",
    },
  },
  datePublished: date,
  dateModified: date,
});
---

<script type="application/ld+json" set:html={schema}></script>
