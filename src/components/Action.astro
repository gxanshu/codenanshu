---
import PrimaryButton from "./buttons/Primary.astro";
---

<!-- Action buttons for articles  -->
<div class="flex">
  <PrimaryButton className="px-2 text-sm mr-4">
    <a href="https://codenanshu.substack.com/" target="_blank"
      >Subscribe for more</a
    >
  </PrimaryButton>
  <PrimaryButton className="px-2 text-sm">
    <a id="twitter_link" href="#" target="_blank">Discuss on Twitter</a>
  </PrimaryButton>
  <PrimaryButton className="ml-4 px-2 text-sm">
    <a href="https://codenanshu.in/admin" target="_blank"
      >Suggest Changes</a
    >
  </PrimaryButton>
</div>

<script is:inline>
  let link = document.getElementById("twitter_link");
  link.href = `https://mobile.twitter.com/search?q=${decodeURI(
    window.location
  )}`;
</script>
