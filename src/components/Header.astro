---
import Search from 'components/search/Search.astro'
---

<header
  aria-label="Site Header"
  class="bg-gray-50 fixed z-50 w-full top-0 left-0 bg-opacity-70 backdrop-filter backdrop-blur-xl border-b-gray-900 border-gray-100"
  x-data="{
    open: false,
    toggle() {
        if (this.open) {
            return this.close()
        }

        this.$refs.button.focus()

        this.open = true
    },
    close(focusAfter) {
        if (! this.open) return

        this.open = false

        focusAfter && focusAfter.focus()
    }
}"
  x-on:keydown.escape.prevent.stop="close($refs.button)"
  x-on:focusin.window="! $refs.panel.contains($event.target) && close()"
  x-id="['dropdown-button']"
  class="relative"
>
  <div
    class="mx-auto flex h-14 max-w-screen-xl items-center gap-8 px-4 sm:px-6 lg:px-8"
  >
    <a class="block text-blue-600" href="/">
      <span class="sr-only">Home</span>
      <img class="w-8" src="/logo.png" alt="logo" />
    </a>

    <div class="flex flex-1 items-center justify-end md:justify-between">
      <nav aria-label="Site Nav" class="hidden md:block">
        <ul class="flex items-center gap-6 text-sm">
          <li>
            <a
              class="text-gray-800 transition hover:text-gray-800/75"
              href="/about"
            >
              About
            </a>
          </li>

          <li>
            <a
              class="text-gray-800 transition hover:text-gray-800/75"
              href="/blog"
            >
              Blogs
            </a>
          </li>

          <li>
            <a
              class="text-gray-800 transition hover:text-gray-800/75"
              href="/notes"
            >
              Notes
            </a>
          </li>

          <li>
            <a
              class="text-gray-800 transition hover:text-gray-800/75"
              href="/contact"
            >
              Contact
            </a>
          </li>
        </ul>
      </nav>
      <Search/>
        <button
          class="block rounded bg-gray-800 p-2 text-white md:hidden"
          x-ref="button"
          x-on:click="toggle()"
          :aria-expanded="open"
          :aria-controls="$id('dropdown-button')"
        >
          <span class="sr-only">Toggle menu</span>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-4 w-4"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            stroke-width="2"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>
  <template x-if="true">
    <div
      x-ref="panel"
      x-show="open"
      x-transition.origin.top.left
      x-on:click.outside="close($refs.button)"
      :id="$id('dropdown-button')"
      style="display: none;"
      class="absolute right-5 mt-2 w-40 rounded-md bg-white shadow-md"
    >
      <ul class="text-gray-800">
        <li class="m-4"><a href="/about">About</a></li>
        <li class="m-4"><a href="/blog">Blog</a></li>
        <li class="m-4"><a href="/notes">Notes</a></li>
        <li class="m-4"><a href="/contact">Contact</a></li>
      </ul>
    </div>
  </template>
</header>
