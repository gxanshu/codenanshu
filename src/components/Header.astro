<header
  aria-label="Site Header"
  class="bg-gray-50 fixed z-50 w-full top-0 left-0 opacity-90 backdrop-blur-sm border-b border-gray-100"
  x-data="{open: false}"
>
  <div
    class="mx-auto flex h-16 max-w-screen-xl items-center gap-8 px-4 sm:px-6 lg:px-8"
  >
    <a class="block text-blue-600" href="/">
      <span class="sr-only">Home</span>
      <img class="w-8" src="/logo.png" alt="log"/>
    </a>

    <div class="flex flex-1 items-center justify-end md:justify-between">
      <nav aria-label="Site Nav" class="hidden md:block">
        <ul class="flex items-center gap-6 text-sm">
          <li>
            <a class="text-gray-800 transition hover:text-gray-800/75" href="/about">
              About
            </a>
          </li>

          <li>
            <a class="text-gray-800 transition hover:text-gray-800/75" href="/blog">
              Blogs
            </a>
          </li>

          <li>
            <a class="text-gray-800 transition hover:text-gray-800/75" href="/notes">
              Notes
            </a>
          </li>

          <li>
            <a class="text-gray-800 transition hover:text-gray-800/75" href="/contact">
              Contact
            </a>
          </li>
        </ul>
      </nav>

      <div class="flex items-center gap-4">
        <div class="sm:flex sm:gap-4">
          <button
            aria-label="search button"
            class="block rounded bg-gray-800 p-2 text-white transition hover:text-gray-200/75"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-4 w-4"
              preserveAspectRatio="xMidYMid meet"
              viewBox="0 0 24 24"
              ><path
                fill="currentColor"
                d="M15.5 14h-.79l-.28-.27A6.471 6.471 0 0 0 16 9.5A6.5 6.5 0 1 0 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5S14 7.01 14 9.5S11.99 14 9.5 14z"
              ></path>
            </svg>
          </button>
        </div>

        <button
          class="block rounded bg-gray-800 p-2 text-white md:hidden"
          @click="open = ! open"
        >
          <span class="sr-only">Toggle menu</span>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-4 w-4"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            stroke-width="2"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>
  <div x-show="open" @click.outside="open = false">
    <ul class="text-gray-800">
      <li class="m-4"><a href="/about">About</a></li>
      <li class="m-4"><a href="/blog">Blog</a></li>
      <li class="m-4"><a href="/notes">Notes</a></li>
      <li class="m-4"><a href="/contact">Contact</a></li>
    </ul>
  </div>
</header>
