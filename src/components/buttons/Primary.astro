const { className, id } = Astro.props;
---

<button
  id={id}
  class={`text-center text-white bg-black border border-ultraDarkGray py-2 rounded-lg transition delay-50 duration-50 ease-in-out active:scale-75 ${className}`}
>
  <slot />
</button>
