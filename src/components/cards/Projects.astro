---
const { data } = Astro.props;
---

<div class="py-8 px-4 lg:w-1/3">
  <div class="h-full flex items-start">
    <div class="w-12 flex-shrink-0 flex flex-col text-center leading-none">
      <span class="text-gray-800 pb-2 mb-2 border-b-2 border-gray-700"
        >{data.date[0]}</span
      >
      <span class="font-medium text-lg leading-none text-gray-600 title-font"
        >{data.date[1]}</span
      >
    </div>
    <div class="flex-grow pl-6">
      <span
        class="tracking-widest text-xs font-medium text-indigo-400 mb-1"
      >
        {data.tech}
      </span>
      <h3 class="font-heading text-neutral-900 mb-3">
        <a href={data.link} target="_blank" rel="nofollow">{data.name}</a>
      </h3>
      <p class="leading-relaxed mb-5">
        {data.discription}
      </p>
      <a class="inline-flex items-center">
        <img
          alt="blog"
          src={data.avatar}
          class="w-8 h-8 rounded-full flex-shrink-0 object-cover object-center"
        />
        <span class="flex-grow flex flex-col pl-3">
          <span class="title-font font-medium text-gray-800"
            >{data.developer}</span
          >
        </span>
      </a>
    </div>
  </div>
</div>
