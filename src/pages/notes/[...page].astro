---
import Default from "layouts/Default.astro";
import NotesCard from "components/cards/Notes.astro";

type GetStaticPaths = {
  paginate: any;
}; // Overrides `GetStaticPathsOptions` types from Astro
export async function getStaticPaths({ paginate }: GetStaticPaths) {
  const blogs = await Astro.glob("./*.mdx");
  const sortedPosts = blogs.sort(
    (a, b) => Date.parse(b.frontmatter.pubDate) - Date.parse(a.frontmatter.pubDate)
  );
  // Return a paginated collection of paths for all posts
  return paginate(sortedPosts, { pageSize: 12 });
}

const { page } = Astro.props;
---

<Default
  title="Notes - codenanshu developer blog"
  description="Thoughts, mental models, invantions and much more at one place grab my all latest notes about the web."
>
  <section class="my-10 py-5">
    <div class="text-center text-black">
      <h1 class="font-heading text-2xl md:text-3xl lg:text-4xl">Notes</h1>
      <p class="my-4">My latest thoughts, updates, stories and invantions</p>
    </div>
    <div
      class="relative items-center w-full px-5 py-12 mx-auto md:px-12 lg:px-24 max-w-7xl"
    >
      <div class="grid w-full grid-cols-1 gap-6 mx-auto lg:grid-cols-3">
        {
          page.data.map((blog) => (
            <NotesCard frontmatter={blog.frontmatter} url={blog.url} />
          ))
        }
      </div>
    </div>
    <div class="flex justify-between mt-16">
      {
        page.url.prev !== undefined ? (
          <button class="px-4 py-2 bg-gray-100 rounded-md border-2">
            <a href={page.url.prev} class="text-black">
              Prev
            </a>
          </button>
        ) : (
          <div />
        )
      }
      {
        page.url.next && (
          <button class="px-4 py-2 bg-gray-100 rounded-md border-2">
            <a href={page.url.next} class="text-black">
              Next
            </a>
          </button>
        )
      }
    </div>
  </section>
</Default>
