---
const { frontmatter } = Astro.props;
import Default from "layouts/Default.astro";
import Image from "components/Image.astro";
import Action from "components/Action.astro";
---

<Default
  title={frontmatter.title}
  description={frontmatter.description}
  image={frontmatter.image}
  isArticle
  class="py-8"
>
  <article class="text-gray-700">
    <section>
      <h1
        class="font-heading sm:text-2xl text-xl mb-4 font-medium text-black my-8 leading-relaxed"
      >
        {frontmatter.title}
      </h1>
      <Image
        src={frontmatter.image}
        alt={frontmatter.title}
        height="340"
        width="640"
        class="my-4 w-full rounded"
      />
      <p>Ai Anshu | {new Date(frontmatter.pubDate).toDateString()}</p>
    </section>
    <section
      class="my-4 py-4 prose prose-headings:font-heading prose-headings:text-xl prose-stone prose-img:rounded prose-a:text-blue-600 prose-a:no-underline"
    >
      <slot />
    </section>
  </article>
  <Action />
</Default>
